@model BCS.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}


@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{



    <div class="modal-content">
        <div class="modal-header bgColor-lv">
            <h4 class="modal-title"><span class="glyphicon glyphicon-lock"></span>Re-set Password</h4>
        </div>
        <div class="modal-body">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
            <div class="form-group">
                @Html.HiddenFor(m => m.UserId, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.HiddenFor(m => m.UserId, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="modal-footer bgColor-lv mar0 pad10">
            <input type="submit" class="btn btn-default" value="Reset" />
        </div>
    </div>


}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
