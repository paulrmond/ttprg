@model BCS.Models.ApplicationUser
@{
    ViewBag.Title = "Update User Information";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="modal-backdrop bgColor-db fade70 show"></div>
<div class="modal show ovrFlwHide" id="modalAddUser" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><span class="glyphicon glyphicon-folder-open"></span> @ViewBag.Title</h4>
            </div>

            @using (Html.BeginForm())
            {
                <div class="modal-body bgColor-lv h350px ovrFlw-YAuto">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.GivenName, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.GivenName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.MiddleName, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.LastName, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", disabled = "disabled" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", disabled = "disabled" })
                        </div>
                    </div>
                    <!--Select the Role Type for the User-->
                    <div class="form-group">
                        @Html.Label("User Type", new { @class = "col-md-3 control-label" })
                        <div class="col-md-9">
                            @Html.DropDownList("Name", null, new { @class = "form-control" })
                        </div>
                    </div>
                    <!--Ends Here-->
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="UPDATE" />
                    @Html.ActionLink("Cancel", "ViewUser", "Account", new { @class = "btn btn-primary w100px" })
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
