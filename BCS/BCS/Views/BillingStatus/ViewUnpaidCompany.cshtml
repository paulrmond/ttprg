<!-- Page Initialization -->

@using System.Linq

@{
    ViewBag.Title = "Billing Status Unpaid Company";
}
@model BCS.Models.SearchIndexViewModel
@using System.Linq

<div ID="contentDataEntryRental" class="pad0">
    <!-- Enterprise Detail -->
    <div class="container modal-content bgColor-White pad0">
        <div class="modal-header fs18 fontBld bgColor-lb"><span class="glyphicon glyphicon-book"></span> <span class="fs20">UNPAID COMPANY</span></div>
        <div class="modal-body ">
            <div class="col-sm-12 padr25 br2 bgColor-blk">
                <table class="">
                    <thead class="br1-bot-Blk bgColor-blk fcWhite pad0 text-center fontBld ">
                        <tr class="container w100per pad0">
                            <td class="col-sm-2 pad2">COMPANY NAME</td>
                            <td class="col-sm-2">ADDRESS</td>
                            <td class="col-sm-1"></td>
                            <td class="col-sm-2 txtLeft">TYPE</td>
                            <td class="col-sm-2 txtLeft">BILLING TYPE</td>
                            <td class="col-sm-2 txtLeft">DUE DATE</td>
                            <td class="col-sm-2 txtRight">AMOUNT</td>
                        </tr>
                    </thead>
                </table>
            </div>

            <div class="col-sm-12 hmax300px ovrFlw-YAuto br2 pad0">
                <table class="">
                    <tbody class="">
                        @if (Model.UnpaidCompanyName != null)
                        {
                        for (int x = 0; x <= Model.UnpaidCompanyName.Count - 1; x++)
                        {
                                <tr class="container w100per pad0">
                                    <td class="col-sm-2 br1Grey cell ovrFlwHide" align="center">@Model.UnpaidCompanyName[x]</td>
                                    <td class="col-sm-2 br1Grey cell ovrFlwHide" align="center">@Model.UnpaidCompanyAddress[x]</td>
                                    <td class="col-sm-2 br1Grey cell ovrFlwHide" align="center">@Model.UnpaidEnterpriseType[x]</td>
                                    <td class="col-sm-2 br1Grey cell ovrFlwHide" align="center">@Model.UnpaidBillingType[x]</td>
                                    <td class="col-sm-2 br1Grey cell ovrFlwHide" align="center">@Model.UnpaidDueDate[x].ToShortDateString()</td>
                                    <td class="col-sm-2 br1Grey cell ovrFlwHide" align="center">@String.Format("{0:n}", Model.UnpaidAmount[x])</td>
                                </tr>
                        }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}